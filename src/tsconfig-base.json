{
	"compilerOptions": {
		"strict": true,
		"noImplicitReturns": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"forceConsistentCasingInFileNames": true,
		"preserveConstEnums": true,
		"pretty": true,
		"allowSyntheticDefaultImports": false,
		"esModuleInterop": true,
		"inlineSourceMap": false,
		"skipLibCheck": false,

		"target": "es2017",
		"lib": ["es2018"],
		"moduleResolution": "node",
		"paths": {
			// prioritize types at the project level (avoids types in npm linked modules)
			"*": ["node_modules/@types/*", "*"]
		},
		"baseUrl": "../src"
	},
	"compileOnSave": true
}
